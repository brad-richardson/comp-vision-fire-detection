function [output] = method8(im)
%METHOD8 Method 8 from the paper
%   Take YCbCr image, binarize based on polynomials used to estimate
%   red-diff chroma component for fire

    crVals = im(:,:,3);
    cr = {crVals, crVals.^2, crVals.^3, crVals.^4, crVals.^5, crVals.^6, crVals.^7};
    
    % Individual functions
    fuCr = (-2.6*pow(10,-10)).*cr{7} + (3.3*pow(10,-7)).*cr{6} + ...
        (-1.7*pow(10,-4)).*cr{5} + (5.16*pow(10,-2)).*cr{4} + ...
        (-9.10.*cr{3}) + (9.60*100).*cr{2} + (-5.6*pow(10,4)).*cr{1} + ...
        (1.4*pow(10,6));
    flCr = (-6.77*pow(10,-8)).*cr{5} + (5.5*pow(10,-5)).*cr{4} + ...
        (-1.76*pow(10,-2)).*cr{3} + (2.78*cr{2}) +  ...
        (-2.15*pow(10,2))*cr{1} + (6.62*pow(10,3));
    fdCr = (1.81*pow(10,-4))*cr{4} + (1.02
        

end

